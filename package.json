{
  "name": "drinks",
  "version": "0.0.0-semantically-released",
  "description": "Craft Cocktail Gallery",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/drinks.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/drinks/issues"
  },
  "scripts": {
    "clean": "del-cli .cache app/icons build node_modules/.vite",
    "build": "run-s build:*",
    "build:icons": "rmx svg-sprite ./app/assets/svg-icons ./app/icons --sprite=icons-sprite.svg --template=./app/assets/svg-icons/template.tsx",
    "build:remix": "remix vite:build",
    "deploy": "flyctl deploy --remote-only",
    "dev": "run-s clean build:icons dev:remix",
    "dev:remix": "tsx watch --clear-screen=false --inspect --require dotenv/config --watch-path ./server.ts ./server.ts",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "tsx ./app/db.server/migrate.ts",
    "start": "cross-env NODE_ENV=production tsx ./server.ts",
    "typecheck": "tsc",
    "validate": "run-p format:check lint typecheck"
  },
  "dependencies": {
    "@fontsource/source-sans-3": "5.0.20",
    "@remix-pwa/sw": "3.0.7",
    "@remix-pwa/worker-runtime": "2.1.2",
    "@remix-run/express": "2.10.1",
    "@remix-run/node": "2.10.1",
    "@remix-run/react": "2.10.1",
    "@remix-run/serve": "2.10.1",
    "algoliasearch": "4.24.0",
    "better-sqlite3": "11.1.2",
    "clsx": "2.1.1",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "drizzle-orm": "0.31.2",
    "express": "4.19.2",
    "isbot": "5.1.11",
    "litefs-js": "1.1.2",
    "lodash-es": "4.17.21",
    "marked": "12.0.2",
    "morgan": "1.10.0",
    "p-throttle": "6.1.0",
    "pathe": "1.1.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "remix": "2.10.1",
    "source-map-support": "0.5.21",
    "tsx": "4.16.2",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@remix-pwa/dev": "3.0.5",
    "@remix-run/dev": "2.10.1",
    "@sly-cli/sly": "1.10.0",
    "@types/better-sqlite3": "7.6.11",
    "@types/compression": "1.7.5",
    "@types/express": "4.17.21",
    "@types/lodash-es": "4.17.12",
    "@types/morgan": "1.9.9",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/source-map-support": "0.5.10",
    "@wkovacs64/eslint-config": "7.2.4",
    "@wkovacs64/prettier-config": "4.1.1",
    "autoprefixer": "10.4.19",
    "del-cli": "5.1.0",
    "drizzle-kit": "0.22.8",
    "eslint": "8.57.0",
    "glob": "10.4.2",
    "node-html-parser": "6.1.13",
    "npm-run-all2": "6.2.2",
    "postcss": "8.4.39",
    "prettier": "3.3.2",
    "prettier-plugin-tailwindcss": "0.6.5",
    "rmx-cli": "0.4.16",
    "semantic-release": "24.0.0",
    "shelljs": "0.8.5",
    "tailwindcss": "3.4.4",
    "typescript": "5.5.3",
    "vite": "5.3.3",
