{
  "name": "drinks",
  "version": "0.0.0-semantically-released",
  "description": "Craft Cocktail Gallery",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/drinks.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/drinks/issues"
  },
  "scripts": {
    "clean": "del-cli .cache ./app/icons ./build ./public/build ./public/sw.js",
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs --bundle ./server/index.ts --outdir=build/server",
    "build:worker": "remix-pwa build",
    "deploy": "flyctl deploy --remote-only",
    "dev": "npm run clean && run-p dev:*",
    "dev:remix": "remix dev --manual --command \"tsx watch --clear-screen=false --ignore \"app/**\" --ignore \"build/**\" --inspect --require dotenv/config ./server/index.ts\"",
    "dev:worker": "remix-pwa dev",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "eslint .",
    "typecheck": "tsc",
    "setup": "prisma migrate dev",
    "start": "cross-env NODE_ENV=production node ./build/server/index.js"
  },
  "dependencies": {
    "@fontsource/source-sans-3": "5.0.18",
    "@prisma/client": "5.8.0",
    "@remix-pwa/cache": "2.0.12",
    "@remix-pwa/strategy": "2.1.9",
    "@remix-pwa/sw": "2.1.12",
    "@remix-run/css-bundle": "2.5.0",
    "@remix-run/express": "2.5.0",
    "@remix-run/node": "2.5.0",
    "@remix-run/react": "2.5.0",
    "@remix-run/serve": "2.5.0",
    "algoliasearch": "4.22.1",
    "clsx": "2.1.0",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "express": "4.18.2",
    "isbot": "4.4.0",
    "litefs-js": "1.1.2",
    "lodash": "4.17.21",
    "marked": "11.1.1",
    "morgan": "1.10.0",
    "p-throttle": "6.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "4.12.0",
    "remix": "2.5.0",
    "source-map-support": "0.5.21",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@remix-pwa/dev": "2.0.31",
    "@remix-pwa/worker-runtime": "2.0.8",
    "@remix-run/dev": "2.5.0",
    "@remix-run/eslint-config": "2.5.0",
    "@types/compression": "1.7.5",
    "@types/express": "4.17.21",
    "@types/lodash": "4.14.202",
    "@types/marked": "5.0.2",
    "@types/morgan": "1.9.9",
    "@types/react": "18.2.47",
    "@types/react-dom": "18.2.18",
    "@types/source-map-support": "0.5.10",
    "@wkovacs64/prettier-config": "3.0.3",
    "autoprefixer": "10.4.16",
    "chokidar": "3.5.3",
    "del-cli": "5.1.0",
    "esbuild": "0.19.11",
    "eslint": "8.56.0",
    "glob": "10.3.10",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.33",
    "prettier": "3.2.1",
    "prettier-plugin-tailwindcss": "0.5.11",
    "prisma": "5.8.0",
    "remix-pwa": "3.0.19",
    "semantic-release": "23.0.0",
    "shelljs": "0.8.5",
    "tailwindcss": "3.4.1",
    "tsx": "4.7.0",
    "typescript": "5.3.3"
  },
  "engines": {
    "node": ">=20"
  }
}
