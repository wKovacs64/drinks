  "scripts": {
    "clean": "del-cli .cache app/icons build node_modules/.vite",
    "build": "run-s build:*",
    "build:icons": "rmx svg-sprite ./app/assets/svg-icons ./app/icons --sprite=icons-sprite.svg --template=./app/assets/svg-icons/template.tsx",
    "build:remix": "remix vite:build",
    "deploy": "flyctl deploy --remote-only",
    "dev": "run-s clean build:icons dev:remix",
    "dev:remix": "tsx watch --clear-screen=false --inspect --require dotenv/config --watch-path ./server.ts ./server.ts",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "setup": "tsx ./app/db.server/migrate.ts",
    "start": "cross-env NODE_ENV=production tsx ./server.ts",
    "typecheck": "tsc",
    "validate": "run-p format:check lint typecheck"
  },
  "dependencies": {
    "@fontsource/source-sans-3": "5.0.19",
    "@remix-pwa/sw": "2.2.0-dev.4",
    "@remix-run/express": "2.8.0",
    "@remix-run/node": "2.8.0",
    "@remix-run/react": "2.8.0",
    "@remix-run/serve": "2.8.0",
    "algoliasearch": "4.22.1",
    "better-sqlite3": "9.4.3",
    "clsx": "2.1.0",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "drizzle-orm": "0.29.4",
    "express": "4.18.3",
    "isbot": "5.1.1",
    "litefs-js": "1.1.2",
    "lodash-es": "4.17.21",
    "marked": "12.0.0",
    "morgan": "1.10.0",
    "p-throttle": "6.1.0",
    "pathe": "1.1.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "remix": "2.8.0",
    "source-map-support": "0.5.21",
    "tsx": "4.7.1",
    "zod": "3.22.4"
  },
  "devDependencies": {
    "@remix-pwa/dev": "2.1.0-dev.7",
