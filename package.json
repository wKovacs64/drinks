{
  "name": "drinks",
  "version": "3.7.1",
  "description": "Craft Cocktail Gallery",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "imports": {
    "#/*": "./*"
  },
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/drinks.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/drinks/issues"
  },
  "scripts": {
    "clean": "del-cli .cache app/icons/icons-sprite.svg app/icons/types.ts build node_modules/.vite public/sw.js",
    "build": "run-s build:*",
    "build:rr": "react-router build",
    "build:sw": "esbuild app/entry.worker.ts --minify --platform=browser --format=esm --outfile=build/client/sw.js",
    "deploy": "flyctl deploy --remote-only",
    "dev": "pnpm run clean && run-p dev:rr dev:sw",
    "dev:rr": "react-router dev",
    "dev:sw": "esbuild app/entry.worker.ts --watch --platform=browser --format=esm --outfile=public/sw.js",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "cross-env NODE_ENV=production PORT=8080 node ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "validate": "run-p format:check lint typecheck",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@coji/remix-auth-google": "4.2.0",
    "@epic-web/invariant": "1.0.0",
    "@epic-web/remember": "1.1.0",
    "@fontsource/source-sans-3": "5.2.9",
    "@imagekit/nodejs": "7.2.1",
    "@paralleldrive/cuid2": "3.3.0",
    "@react-router/node": "7.13.0",
    "@react-router/serve": "7.13.0",
    "@unpic/react": "1.0.2",
    "better-sqlite3": "12.6.2",
    "clsx": "2.1.1",
    "cross-env": "10.1.0",
    "drizzle-orm": "0.45.1",
    "isbot": "5.1.34",
    "lodash-es": "4.17.23",
    "marked": "15.0.12",
    "minisearch": "7.2.0",
    "picocolors": "1.1.1",
    "pretty-cache-header": "1.0.0",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-router": "7.13.0",
    "react-router-hono-server": "2.24.0",
    "remix-auth": "4.2.0",
    "remix-auth-oauth2": "3.4.1",
    "remix-utils": "9.0.0",
    "unpic": "4.2.2",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "1.58.0",
    "@react-router/dev": "7.13.0",
    "@react-router/fs-routes": "7.13.0",
    "@tailwindcss/vite": "4.1.18",
    "@types/better-sqlite3": "7.6.13",
    "@types/lodash-es": "4.17.12",
    "@types/morgan": "1.9.10",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "@types/source-map-support": "0.5.10",
    "@wkovacs64/add-icon": "1.2.1",
    "@wkovacs64/eslint-config": "7.12.0",
    "@wkovacs64/prettier-config": "4.2.4",
    "babel-plugin-react-compiler": "1.0.0",
    "del-cli": "7.0.0",
    "drizzle-kit": "0.31.8",
    "esbuild": "0.27.2",
    "eslint": "9.39.2",
    "node-html-parser": "7.0.2",
    "npm-run-all2": "8.0.4",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "tailwindcss": "4.1.18",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-babel": "1.4.1",
    "vite-plugin-icons-spritesheet": "3.0.1",
    "vite-plugin-static-copy": "3.2.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3"
    ]
  },
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=20"
  }
}
