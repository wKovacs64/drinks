{
  "name": "drinks",
  "version": "0.0.0-semantically-released",
  "description": "Craft Cocktail Gallery",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/drinks.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/drinks/issues"
  },
  "scripts": {
    "clean": "del-cli .cache app/icons/icons-sprite.svg app/icons/types.ts build node_modules/.vite public/sw.js",
    "build": "run-s build:*",
    "build:rr": "react-router build",
    "build:sw": "esbuild app/entry.worker.ts --minify --platform=browser --format=esm --outfile=build/client/sw.js",
    "deploy": "flyctl deploy --remote-only",
    "dev": "npm run clean && run-p dev:rr dev:sw",
    "dev:rr": "react-router dev",
    "dev:sw": "esbuild app/entry.worker.ts --watch --platform=browser --format=esm --outfile=public/sw.js",
    "format": "prettier --cache --write .",
    "format:check": "prettier --cache --check .",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "cross-env NODE_ENV=production PORT=8080 node ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "validate": "run-p format:check lint typecheck"
  },
  "dependencies": {
    "@epic-web/invariant": "1.0.0",
    "@fontsource/source-sans-3": "5.2.8",
    "@react-router/node": "7.8.1",
    "@react-router/serve": "7.8.1",
    "@unpic/react": "1.0.1",
    "algoliasearch": "5.35.0",
    "clsx": "2.1.1",
    "cross-env": "10.0.0",
    "isbot": "5.1.29",
    "lodash-es": "4.17.21",
    "marked": "15.0.12",
    "picocolors": "1.1.1",
    "pretty-cache-header": "1.0.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-router": "7.8.1",
    "react-router-hono-server": "2.21.0",
    "unpic": "4.1.3",
    "zod": "4.0.17"
  },
  "devDependencies": {
    "@react-router/dev": "7.8.1",
    "@react-router/fs-routes": "7.8.1",
    "@tailwindcss/vite": "4.1.12",
    "@types/lodash-es": "4.17.12",
    "@types/morgan": "1.9.10",
    "@types/react": "19.1.10",
    "@types/react-dom": "19.1.7",
    "@types/source-map-support": "0.5.10",
    "@wkovacs64/add-icon": "1.2.1",
    "@wkovacs64/eslint-config": "7.9.1",
    "@wkovacs64/prettier-config": "4.2.1",
    "del-cli": "6.0.0",
    "esbuild": "0.25.9",
    "eslint": "9.33.0",
    "glob": "11.0.3",
    "node-html-parser": "7.0.1",
    "npm-run-all2": "8.0.4",
    "prettier": "3.6.2",
    "prettier-plugin-tailwindcss": "0.6.14",
    "semantic-release": "24.2.7",
    "tailwindcss": "4.1.12",
    "typescript": "5.9.2",
    "vite": "7.1.2",
    "vite-plugin-icons-spritesheet": "3.0.1",
    "vite-plugin-static-copy": "3.1.1",
    "vite-tsconfig-paths": "5.1.4"
  },
  "engines": {
    "node": ">=20"
  }
}
