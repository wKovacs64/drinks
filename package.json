{
  "name": "drinks",
  "version": "0.0.0-semantically-released",
  "description": "Craft Cocktail Gallery",
  "license": "MIT",
  "private": true,
  "sideEffects": false,
  "author": {
    "name": "Justin Hall",
    "email": "justin.r.hall@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wKovacs64/drinks.git"
  },
  "bugs": {
    "url": "https://github.com/wKovacs64/drinks/issues"
  },
  "scripts": {
    "clean": "del-cli .cache ./build ./public/build ./public/sw.js",
    "build": "run-s build:*",
    "build:remix": "remix build",
    "build:server": "esbuild --platform=node --format=cjs --bundle ./server/index.ts --outdir=build/server",
    "build:worker": "esbuild --minify --bundle --format=esm --define:process.env.NODE_ENV='\"production\"' ./app/entry.worker.ts --outfile=./public/sw.js",
    "deploy": "flyctl deploy --remote-only",
    "dev": "npm run clean && run-p dev:*",
    "dev:remix": "remix dev --no-restart --command \"node --inspect --require esbuild-register --require dotenv/config ./server/index.ts\"",
    "dev:worker": "esbuild --watch --bundle --format=esm --define:process.env.NODE_ENV='\"development\"' ./app/entry.worker.ts --outfile=./public/sw.js ",
    "format": "prettier --cache --write .",
    "lint": "eslint .",
    "typecheck": "tsc",
    "setup": "prisma migrate dev",
    "start": "cross-env NODE_ENV=production node ./build/server/index.js"
  },
  "dependencies": {
    "@fontsource/source-sans-3": "5.0.5",
    "@prisma/client": "5.0.0",
    "@remix-run/css-bundle": "1.18.1",
    "@remix-run/express": "1.18.1",
    "@remix-run/node": "1.18.1",
    "@remix-run/react": "1.18.1",
    "@remix-run/serve": "1.18.1",
    "algoliasearch": "4.18.0",
    "clsx": "1.2.1",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "express": "4.18.2",
    "isbot": "3.6.12",
    "litefs-js": "1.1.2",
    "lodash": "4.17.21",
    "marked": "5.1.1",
    "morgan": "1.10.0",
    "p-throttle": "5.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "4.10.1",
    "remix": "1.18.1",
    "zod": "3.21.4"
  },
  "devDependencies": {
    "@remix-run/dev": "1.18.1",
    "@remix-run/eslint-config": "1.18.1",
    "@types/compression": "1.7.2",
    "@types/express": "4.17.17",
    "@types/lodash": "4.14.195",
    "@types/marked": "5.0.0",
    "@types/morgan": "1.9.4",
    "@types/react": "18.2.14",
    "@types/react-dom": "18.2.6",
    "@wkovacs64/prettier-config": "3.0.3",
    "autoprefixer": "10.4.14",
    "chokidar": "3.5.3",
    "del-cli": "5.0.0",
    "esbuild": "0.18.11",
    "esbuild-register": "3.4.2",
    "eslint": "8.44.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.25",
    "prettier": "3.0.0",
    "prettier-plugin-tailwindcss": "0.4.0",
    "prisma": "5.0.0",
    "semantic-release": "21.0.7",
    "shelljs": "0.8.5",
    "tailwindcss": "3.3.2",
    "typescript": "5.1.6"
  },
  "engines": {
    "node": ">=16.13.0"
  }
}
